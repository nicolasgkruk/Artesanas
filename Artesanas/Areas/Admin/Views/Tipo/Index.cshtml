@model IEnumerable<Tipo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
      <div class="backgroundWhite">
          <div class="row">
              <div class="col-md-6">
                  <h2 class="text-info">Tipos de cervezas artesanas</h2>
              </div>

              <div class="col-md-6 text-right">
                  <a asp-action="Create" class="btn btn-info">
                      <i class="fas fa-plus"></i>&nbsp;
                        Crear nuevo tipo de cerveza</a>
              </div>
          </div>
          <br />

          @if (Model.Count() > 0)
          {
          <table class="table table-striped border">
              <tr class="class-secondary">
                  <th>
                      @Html.DisplayNameFor(x => x.Name);
                  </th>
                  <th></th>
              </tr>
              @foreach (var tipo in Model)
              {
                  <tr>
                      <td>
                          @Html.DisplayFor(model => tipo.Name);
                      </td>
                      <td> Editar | Eliminar | Detalles </td>
                  </tr>
              }
          </table>
          }
          else
          {
              <p>No existe ningún tipo de cerveza cargado en la base de datos.</p>
          }

      </div>
